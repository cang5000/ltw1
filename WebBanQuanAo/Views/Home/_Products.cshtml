@model WebBanQuanAo.ViewModels.ProductCategoryViewModel

@{
    ViewData["Title"] = "Find";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <h3>Kết quả tìm kiếm</h3>

    @if (Model != null && Model.Products != null && Model.Products.Any())
    {
        <ul>
            @foreach (var product in Model.Products)
            {
                <li>
                    <dl class="row">
                        <dt class="col-sm-2">
                            Tên:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => product.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Giá:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => product.Price)
                        </dd>
                        <dt class="col-sm-2">
                            Mô tả:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => product.Description)
                        </dd>
                        <dt class="col-sm-2">
                            Hình ảnh:
                        </dt>
                        <dd class="col-sm-10">
                            <img src="@product.ImageUrl" alt="Product Image" style="max-width: 100px;" />
                        </dd>
                        <dt class="col-sm-2">
                            Danh mục:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => product.Category.Name)
                        </dd>
                    </dl>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Không tìm thấy sản phẩm nào phù hợp.</p>
    }
}
