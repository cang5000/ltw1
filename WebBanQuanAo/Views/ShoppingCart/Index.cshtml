@model ShoppingCart

<h2>Your Cart</h2>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price</td>
            <td>@(item.Price * item.Quantity)</td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>
            </td>
        </tr>
    }
</table>
<div>
    <a asp-controller="Home" asp-action="Index" type="submit" class="btnProduct">Buy</a>
    <a asp-action="Checkout" type="submit" class="btnProduct">Order</a>
</div>